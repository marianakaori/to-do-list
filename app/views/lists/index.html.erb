<h2>Lists</h2>

<%= link_to 'Add New List', new_list_path  %>

<% @lists.each do |list| %>
    <p>
        <%= link_to list_path(list) do%>
            <%= list.name %>
        <% end %> |
        <%= link_to 'Edit', edit_list_path(list) %> |
        <%= link_to 'Delete', list_path(list), data: { 'turbo_method': :delete, 'turbo_confirm': 'Deseja realmente apagar este item?' } %>
    </p>
<% end %>